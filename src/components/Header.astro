---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2><a href="/"><img src="../../public/Logo.svg" /></a></h2>
    <div class="internal-links">
      <HeaderLink href="/">首頁</HeaderLink>
      <HeaderLink href="/blog">文章</HeaderLink>
      <HeaderLink href="/about">關於我</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0.75rem 2rem;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
</style>
